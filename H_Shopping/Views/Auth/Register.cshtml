@model H_Shopping.DTO.Request.RegisterRequest

<section id="form" style="margin-top: 0">
	<!--form-->
	<div class="container">
		@if (ViewData["message"] != "" && ViewData["message"] != null)
		{
			<div class="alert alert-danger">@ViewData["message"]</div>
		}
		<div style="display: flex; justify-content: center">
			<div class="signup-form"
				 style="max-width: 700px; 
					width: 100%; padding: 20px;
					border: 1px solid #ccc;
					border-radius: 5px;">
				<!--sign up form-->
				<h2 class="text-center">New User Signup!</h2>
					@using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
					{
						<div style="justify-content: center; display: flex; flex-direction: column">
							@Html.TextBoxFor(m => m.Fullname, new { placeholder = "Fullname"})
							@Html.ValidationMessageFor(m => m.Fullname, "", new { @class = "text-danger" })

							@Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })
							@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

							@Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @type = "password" })
							@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

							@Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @type = "password" })
							@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

							@Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @type = "email" })
							@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

							@Html.TextBoxFor(m => m.Phone, new { placeholder = "Phone" })
							@Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })

							@Html.TextBoxFor(m => m.Address, new { placeholder = "Address" })
							@Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })

							<label for="birthdaytime">Birthday (date and time):</label>
							<input type="datetime-local" id="birthdaytime" name="Birth">
							<button style="height: 4rem" type="submit" class="btn btn-default">Signup</button>
							<button style="height: 4rem; width: 100%; background-color: aliceblue; color: black; border: 1px solid gray; font-size: 1.2rem; display: flex; align-items: center; justify-content: center; margin-top: 10px" type="submit" class="btn">
								<img src="~/images/client/icon/google_icon.png" alt="Google Logo" style="width: 20px; margin-right: 10px;">
								Signup with Google
							</button>
							<div class="text-center" style="margin-top: 10px">
								<p>You have an account? <a href="@Url.Action("Login", "Auth")">Login</a></p>
							</div>
						</div>
					}
			</div><!--/sign up form-->
		</div>
	</div>
</section><!--/form-->