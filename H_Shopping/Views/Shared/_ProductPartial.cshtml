@using H_Shopping.Services.IService
@using H_Shopping.DTO.Response

@model List<ProductResponse>

@{
	<div class="features_items">
		<!--features_items-->
		@if (Model == null || Model.Count() <= 0)
		{
			<h4>
				There are no products
			</h4>
		}
		else
		{
			foreach (var item in Model)
			{
				<div class="col-sm-4">
					<div class="product-image-wrapper">
						<a href="@Url.Action("Detail", "Product", new {id=@item.Id})">
							<div class="single-products">
								<div class="productinfo text-center">
									<img src="@item.images.FirstOrDefault().url" alt="" />
									<h2>@item.Price đ</h2>
									<p>@item.Name</p>
									<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
								</div>
								<a href="@Url.Action("Detail", "Product", new {id=@item.Id})">
									<div class="product-overlay">
										<div class="overlay-content">
											<p style="padding: 15px">@item.Description.Substring(0, 100)..</p>
											<h2>@item.Price đ</h2>
											<p>@item.Name</p>
											<p style="font-size: 12px; color: lightgrey">Brand: @item.Brand.Name</p>
											<p style="font-size: 12px; color: lightgrey">Category: @item.Category.Name</p>
											<p>Stock: @item.Stock</p>
											<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
										</div>
									</div>
								</a>
							</div>
						</a>
						<div class="choose">
							<ul class="nav nav-pills nav-justified">
								<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
								<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
							</ul>
						</div>
					</div>
				</div>
			}
		}

	</div>
}